{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "Quantity": {
      "type": "integer",
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "linkTo": {
      "type": "string",
      "required": true
    },
    "short_description": {
      "type": "text"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "size": {
      "type": "enumeration",
      "enum": [
        "S",
        "M",
        "L"
      ]
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "thumnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "products"
    }
  }
}
